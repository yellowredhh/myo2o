<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.myo2o.dao.ShopCategoryDao">
	<select id="queryShopCategory" resultType="com.imooc.myo2o.entity.ShopCategory">
		SELECT
		shop_category_id,
		shop_category_name,
		shop_category_desc,
		shop_category_img,
		priority,
		create_time,
		last_edit_time,
		parent_id
		FROM
		tb_shop_category
		<where>
			<if test="shopCategoryCondition==null">
				<!-- 一级店铺也要选出来 -->
				and parent_id is null
			</if>
			<if test="shopCategoryCondition!=null">
				<!-- 选出具有父类店铺种类的店铺,也就是二级店铺 -->
				and parent_id is not null
			</if>
			<if
				test="shopCategoryCondition!=null and shopCategoryCondition.parentId!=null">
				<!-- 避免shopCategoryCondition空指针情况,所以先加一个非空判定 -->
				and parent_id = #{shopCategoryCondition.parentId}
			</if>
		</where>
		ORDER BY
		priority DESC
	</select>
</mapper>